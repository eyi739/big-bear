<div class="row">
    <h1 class="text-center">New Product</h1>
    <div class="col-6 offset-3">
        <form action="/products" method="POST" novalidate class="validated-form">
            <div class="mb-3">
                <label class="form-label" for="name">Name</label>
                <input class="form-control" type="text" id="name" name="product[name]" required>
                <div class="valid-feedback">
                    Great!
                </div>
            </div>
          
            <div  class="mb-3">
                <label class="form-label" for="category">Category</label>
                <!-- <input class="form-control" type="text" id="category" name="product[category]"> -->
                 <select required name="category" id="category">
                    <option value="fruit">fruit</option>
                    <option value="vegetable">vegetable</option>
                    <option value="dairy">dairy</option>
                    <option value="meat">meat</option>
                    <option value="poultry">poultry</option>
                 </select>
            </div>
          
            <div  class="mb-3">
                <label class="form-label" for="image">Image Url</label>
                <input class="form-control" type="text" id="image" name="product[image]" required>
            </div>

            <div class="mb-3">
                <label for="price" class="form-label">Product Price</label>
             <div class="input-group">
                <span class="input-group-text" id="price-label">$</span>
                <input type="text" class="form-control" name="product[price]"  id="price" aria-describedby="price-label" aria-label="price" placeholder="0.00" required>
              </div>
            </div>              

            <div  class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" id="description" name="product[description]" required></textarea>
            </div>
           <button class="btn btn-success">Submit</button>
        </form>
        <footer>  
            <a href="/products">All Products</a>
        </footer>
      
    </div>
</div>


<script>
    // Example starter JavaScript for disabling form submissions if there are invalid fields
(() => {
  'use strict'

  // Fetch all the forms we want to apply custom Bootstrap validation styles to
  const forms = document.querySelectorAll('.validated-form')

  // Loop over them and prevent submission
  Array.from(forms).forEach(form => {
    form.addEventListener('submit', event => {
      if (!form.checkValidity()) {
        event.preventDefault()
        event.stopPropagation()
      }

      form.classList.add('was-validated')
    }, false)
  })
})()
</script>